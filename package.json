{
	"name": "react.typescript.boilerplate",
	"version": "1.0.0",
	"description": "This is a React Boilerplate project, built using Typescript, and React.",
	"repository": {
		"type": "git",
		"url": "https://github.com/nicolaspearson/react.typescript.boilerplate"
	},
	"license": "GPL-3.0+",
	"scripts": {
		"start": "node scripts/start.js",
		"build": "node scripts/build.js",
		"test": "node scripts/test.js --env=jsdom",
		"prettier": "prettier --write \"src/**/*.{ts,tsx,css}\""
	},
	"dependencies": {
		"font-awesome": "^4.7.0",
		"history": "^4.7.2",
		"normalize.css": "^8.0.0",
		"prop-types": "^15.6.1",
		"react": "^16.3.2",
		"react-dom": "^16.3.2",
		"react-github-button": "^0.1.11",
		"react-redux": "^5.0.7",
		"react-rotating-text": "^1.2.1",
		"react-router": "^4.2.0",
		"react-router-dom": "^4.2.2",
		"react-router-redux": "^5.0.0-alpha.9",
		"redux": "^3.7.2",
		"redux-actions": "^2.3.2",
		"redux-devtools-extension": "^2.13.2",
		"sanitize.css": "5.0.0",
		"typeface-roboto": "^0.0.54"
	},
	"devDependencies": {
		"@types/history": "^4.6.2",
		"@types/jest": "^22.2.3",
		"@types/node": "^9.6.6",
		"@types/prop-types": "^15.5.2",
		"@types/react": "^16.3.13",
		"@types/react-dom": "^16.0.5",
		"@types/react-redux": "^5.0.19",
		"@types/react-router": "^4.0.24",
		"@types/react-router-dom": "^4.2.6",
		"@types/react-router-redux": "^5.0.13",
		"@types/redux": "^3.6.0",
		"@types/redux-actions": "^2.2.4",
		"@types/redux-devtools-extension": "^2.13.2",
		"@types/webpack": "3.8.12",
		"@types/webpack-env": "1.13.6",
		"autoprefixer": "8.4.1",
		"babel-jest": "^22.4.3",
		"babel-loader": "^7.1.4",
		"babel-preset-react-app": "^3.1.1",
		"case-sensitive-paths-webpack-plugin": "2.1.2",
		"chalk": "2.4.1",
		"css-loader": "0.28.11",
		"dotenv": "5.0.1",
		"dotenv-expand": "4.2.0",
		"extract-text-webpack-plugin": "3.0.2",
		"file-loader": "1.1.11",
		"fork-ts-checker-webpack-plugin": "^0.4.1",
		"fs-extra": "5.0.0",
		"html-webpack-plugin": "3.2.0",
		"jest": "22.4.3",
		"node-sass": "^4.9.0",
		"object-assign": "4.1.1",
		"postcss-flexbugs-fixes": "3.3.1",
		"postcss-loader": "2.1.4",
		"prettier": "^1.12.1",
		"promise": "8.0.1",
		"raf": "3.4.0",
		"react-dev-utils": "^5.0.1",
		"resolve": "1.7.1",
		"sass-loader": "^7.0.1",
		"source-map-loader": "^0.2.3",
		"style-loader": "0.21.0",
		"sw-precache-webpack-plugin": "0.11.5",
		"ts-jest": "22.4.4",
		"ts-loader": "^2.3.7",
		"tsconfig-paths-webpack-plugin": "^2.0.0",
		"tslint": "^5.9.1",
		"tslint-config-prettier": "^1.12.0",
		"tslint-react": "^3.5.1",
		"typescript": "^2.8.3",
		"uglifyjs-webpack-plugin": "^1.2.5",
		"url-loader": "1.0.1",
		"webpack": "3.8.1",
		"webpack-dev-server": "2.9.4",
		"webpack-manifest-plugin": "2.0.2",
		"whatwg-fetch": "2.0.4"
	},
	"jest": {
		"collectCoverageFrom": ["src/**/*.{js,jsx,ts,tsx}"],
		"setupFiles": ["<rootDir>/config/polyfills.js"],
		"testMatch": [
			"<rootDir>/src/**/__tests__/**/*.(j|t)s?(x)",
			"<rootDir>/src/**/?(*.)(spec|test).(j|t)s?(x)"
		],
		"testEnvironment": "node",
		"testURL": "http://localhost",
		"transform": {
			"^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
			"^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
			"^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
			"^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
		},
		"transformIgnorePatterns": ["[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"],
		"moduleNameMapper": {
			"^react-native$": "react-native-web"
		},
		"moduleFileExtensions": [
			"web.ts",
			"ts",
			"web.tsx",
			"tsx",
			"web.js",
			"js",
			"web.jsx",
			"jsx",
			"json",
			"node",
			"mjs"
		],
		"globals": {
			"ts-jest": {
				"tsConfigFile":
					"/Users/nicpearson/Work/Personal/Dev/React/react.typescript.boilerplate/tsconfig.test.json"
			}
		}
	},
	"babel": {
		"presets": ["react-app"]
	},
	"eslintConfig": {
		"extends": "react-app"
	}
}
