{
	"name": "react.typescript.boilerplate",
	"version": "1.0.0",
	"description": "This is a React Boilerplate project, built using Typescript, and React.",
	"repository": {
		"type": "git",
		"url": "https://github.com/nicolaspearson/react.typescript.boilerplate"
	},
	"license": "GPL-3.0+",
	"scripts": {
		"start": "node scripts/start.js",
		"build": "node scripts/build.js",
		"test": "node scripts/test.js --env=jsdom",
		"prettier": "prettier --write \"src/**/*.{ts,tsx,css}\""
	},
	"dependencies": {
		"font-awesome": "4.7.0",
		"history": "4.7.2",
		"prop-types": "15.6.1",
		"react": "16.4.0",
		"react-dom": "^16.4.0",
		"react-github-button": "0.1.11",
		"react-redux": "5.0.7",
		"react-rotating-text": "1.2.1",
		"react-router": "4.2.0",
		"react-router-dom": "4.2.2",
		"react-router-redux": "5.0.0-alpha.9",
		"redux": "4.0.0",
		"redux-actions": "2.3.2"
	},
	"devDependencies": {
		"@types/history": "4.6.2",
		"@types/jest": "22.2.3",
		"@types/node": "10.1.2",
		"@types/prop-types": "15.5.3",
		"@types/react": "16.3.14",
		"@types/react-dom": "16.0.5",
		"@types/react-redux": "6.0.0",
		"@types/react-router": "4.0.25",
		"@types/react-router-dom": "4.2.6",
		"@types/react-router-redux": "5.0.14",
		"@types/redux-actions": "2.3.0",
		"@types/webpack": "4.4.0",
		"@types/webpack-env": "1.13.6",
		"autoprefixer": "8.5.1",
		"case-sensitive-paths-webpack-plugin": "2.1.2",
		"chalk": "2.4.1",
		"css-loader": "0.28.11",
		"dotenv": "5.0.1",
		"dotenv-expand": "4.2.0",
		"file-loader": "1.1.11",
		"fork-ts-checker-webpack-plugin": "0.4.1",
		"fs-extra": "6.0.1",
		"html-webpack-plugin": "3.2.0",
		"jest": "23.0.0",
		"mini-css-extract-plugin": "0.4.0",
		"node-sass": "4.9.0",
		"normalize.css": "8.0.0",
		"object-assign": "4.1.1",
		"optimize-css-assets-webpack-plugin": "4.0.1",
		"postcss-flexbugs-fixes": "3.3.1",
		"postcss-loader": "2.1.5",
		"prettier": "1.12.1",
		"promise": "8.0.1",
		"raf": "3.4.0",
		"react-dev-utils": "nicolaspearson/react-dev-utils-webpack-4",
		"resolve": "1.7.1",
		"sanitize.css": "5.0.0",
		"sass-loader": "7.0.1",
		"source-map-loader": "0.2.3",
		"style-loader": "0.21.0",
		"sw-precache-webpack-plugin": "0.11.5",
		"ts-jest": "22.4.6",
		"ts-loader": "4.3.0",
		"tsconfig-paths-webpack-plugin": "3.1.3",
		"tslint": "5.10.0",
		"tslint-config-prettier": "1.13.0",
		"tslint-react": "3.6.0",
		"typeface-roboto": "0.0.54",
		"typescript": "2.8.3",
		"uglifyjs-webpack-plugin": "1.2.5",
		"url-loader": "1.0.1",
		"webpack": "4.8.3",
		"webpack-dev-server": "3.1.4",
		"webpack-manifest-plugin": "2.0.3",
		"whatwg-fetch": "2.0.4"
	},
	"jest": {
		"collectCoverageFrom": ["src/**/*.{js,jsx,ts,tsx}"],
		"setupFiles": ["<rootDir>/config/polyfills.js"],
		"testMatch": [
			"<rootDir>/src/**/__tests__/**/*.(j|t)s?(x)",
			"<rootDir>/src/**/?(*.)(spec|test).(j|t)s?(x)"
		],
		"testEnvironment": "node",
		"testURL": "http://localhost",
		"transform": {
			"^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
			"^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
			"^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
			"^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
		},
		"transformIgnorePatterns": ["[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"],
		"moduleNameMapper": {
			"^react-native$": "react-native-web"
		},
		"moduleFileExtensions": [
			"web.ts",
			"ts",
			"web.tsx",
			"tsx",
			"web.js",
			"js",
			"web.jsx",
			"jsx",
			"json",
			"node",
			"mjs"
		],
		"globals": {
			"ts-jest": {
				"tsConfigFile": "<rootDir>/tsconfig.test.json"
			}
		}
	},
	"babel": {
		"presets": ["react-app"]
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": {
		"development": ["last 2 chrome versions", "last 2 firefox versions", "last 2 edge versions"],
		"production": [">1%", "last 4 versions", "Firefox ESR", "not ie < 11"]
	}
}
